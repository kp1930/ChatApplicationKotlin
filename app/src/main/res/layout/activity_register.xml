<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.RegisterActivity">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/circularImageView"
            app:civ_border_width="4dp"
            app:layout_constraintEnd_toEndOf="@+id/buttonImage"
            app:layout_constraintStart_toStartOf="@+id/buttonImage"
            app:layout_constraintTop_toTopOf="@+id/buttonImage"/>

    <Button
            android:text="Select Image"
            android:textColor="@android:color/white"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_image_rounded"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:id="@+id/buttonImage"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="Username"
            android:ems="10"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:background="@drawable/bg_rounded"
            android:id="@+id/editTextUsernameR"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonImage"
            android:layout_marginTop="32dp"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:ems="10"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:background="@drawable/bg_rounded"
            android:id="@+id/editTextEmailR"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextUsernameR"
            app:layout_constraintStart_toStartOf="@+id/editTextUsernameR"
            app:layout_constraintEnd_toEndOf="@+id/editTextUsernameR"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:ems="10"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:background="@drawable/bg_rounded"
            android:id="@+id/editTextPasswordR"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmailR"
            app:layout_constraintStart_toStartOf="@+id/editTextEmailR"
            app:layout_constraintEnd_toEndOf="@+id/editTextEmailR"/>

    <Button
            android:text="Sign Up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSignUp"
            android:textColor="@android:color/white"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_button_rounded"
            app:layout_constraintTop_toBottomOf="@+id/editTextPasswordR"
            app:layout_constraintStart_toStartOf="@+id/editTextPasswordR"
            app:layout_constraintEnd_toEndOf="@+id/editTextPasswordR"/>

    <TextView
            android:text="Already register? Sign In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSignIn"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonSignUp"
            app:layout_constraintStart_toStartOf="@+id/buttonSignUp"
            app:layout_constraintEnd_toEndOf="@+id/buttonSignUp" android:textColor="@android:color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>