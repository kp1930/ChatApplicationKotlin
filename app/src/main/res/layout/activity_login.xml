<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.LoginActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:ems="10"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:background="@drawable/bg_rounded"
            android:id="@+id/editTextEmailL"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="112dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:ems="10"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:background="@drawable/bg_rounded"
            android:id="@+id/editTextPasswordL"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmailL"
            app:layout_constraintStart_toStartOf="@+id/editTextEmailL"
            app:layout_constraintEnd_toEndOf="@+id/editTextEmailL"/>

    <Button
            android:text="Log In"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLogIn"
            android:textColor="@android:color/white"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_button_rounded"
            app:layout_constraintTop_toBottomOf="@+id/editTextPasswordL"
            app:layout_constraintStart_toStartOf="@+id/editTextPasswordL"
            app:layout_constraintEnd_toEndOf="@+id/editTextPasswordL"/>

    <TextView
            tools:text="Want to register?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSignUp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonLogIn"
            app:layout_constraintStart_toStartOf="@+id/buttonLogIn"
            app:layout_constraintEnd_toEndOf="@+id/buttonLogIn" android:textColor="@android:color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>